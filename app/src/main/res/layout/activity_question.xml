<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionselect"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="com.fromthemind.quizrush.QuestionActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/questionText"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="QUESTION TEXT"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="2.5dp"
        >
        <Button
            android:id="@+id/optionButton0"
            android:text="option1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickAnswer"
            android:background="@color/colorNormal"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            />

        <Button
            android:text="option2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/optionButton1"
            android:onClick="onClickAnswer"
            android:background="@color/colorNormal"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            />
    </LinearLayout>

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chronometer"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="2.5dp"
        >
        <Button
            android:id="@+id/optionButton2"
            android:text="option3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:background="@color/colorNormal"
            android:onClick="onClickAnswer"/>

        <Button
            android:id="@+id/optionButton3"
            android:text="option4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:background="@color/colorNormal"
            android:onClick="onClickAnswer"
            />
    </LinearLayout>



</LinearLayout>