<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionselect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fromthemind.quizrush.QuestionSelectActivity">


    <TextView
        android:text="Topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Topic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic3"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/topic1button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button2"
        android:layout_below="@+id/topic1button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button4"
        android:layout_above="@+id/topic1button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button5"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/topic1button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button2"
        android:layout_alignBaseline="@+id/topic1button2"
        android:layout_alignBottom="@+id/topic1button2"
        android:layout_alignLeft="@+id/topic2button3"
        android:layout_alignStart="@+id/topic2button3" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button3"
        android:layout_alignBaseline="@+id/topic1button3"
        android:layout_alignBottom="@+id/topic1button3"
        android:layout_alignLeft="@+id/topic2button4"
        android:layout_alignStart="@+id/topic2button4" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button4"
        android:layout_alignBaseline="@+id/topic1button4"
        android:layout_alignBottom="@+id/topic1button4"
        android:layout_alignLeft="@+id/topic2button5"
        android:layout_alignStart="@+id/topic2button5" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button5"
        android:layout_alignBaseline="@+id/topic1button5"
        android:layout_alignBottom="@+id/topic1button5"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic3button1"
        android:layout_alignBaseline="@+id/topic2button1"
        android:layout_alignBottom="@+id/topic2button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic3button2"
        android:layout_alignBaseline="@+id/topic2button2"
        android:layout_alignBottom="@+id/topic2button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic3button3"
        android:layout_alignBaseline="@+id/topic2button3"
        android:layout_alignBottom="@+id/topic2button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic3button4"
        android:layout_alignBaseline="@+id/topic2button4"
        android:layout_alignBottom="@+id/topic2button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic3button5"
        android:layout_alignBaseline="@+id/topic2button5"
        android:layout_alignBottom="@+id/topic2button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button1"
        android:layout_alignBottom="@+id/topic1button1"
        android:layout_alignLeft="@+id/topic2button2" />

</RelativeLayout>
