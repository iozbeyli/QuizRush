<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionselect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fromthemind.quizrush.QuestionSelectActivity">

    <TextView
        android:text="Topic0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic0"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textAlignment="center" />

    <TextView
        android:text="Topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic0button0"
        android:layout_alignTop="@+id/topic0button1"
        android:layout_marginTop="40dp"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic0button1"
        android:layout_alignTop="@+id/topic0button2"
        android:layout_marginTop="40dp"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic0button3"
        android:layout_alignBottom="@+id/topic0button2"
        android:layout_marginBottom="40dp"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic0button4"
        android:layout_alignBottom="@+id/topic0button3"
        android:layout_marginBottom="40dp"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button0"
        android:layout_alignTop="@+id/topic1button1"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button1"
        android:layout_alignTop="@+id/topic1button2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button3"
        android:layout_alignBottom="@+id/topic1button2"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic1button4"
        android:layout_alignBottom="@+id/topic1button3"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button0"
        android:layout_alignTop="@+id/topic2button1"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button1"
        android:layout_alignTop="@+id/topic2button2"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button3"
        android:layout_alignBottom="@+id/topic2button2"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic2button4"
        android:layout_alignBottom="@+id/topic2button3"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:onClick="onClickQuestion"/>

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic0button2"
        android:onClick="onClickQuestion"
        android:layout_centerVertical="true"
        />


</RelativeLayout>
